@model InstructorViewModel
 @{ 
     ViewData["Title"] = "Instructor Details";
    SelectList selectListItems = new SelectList(Model.Departments, "Id", "Name");
 }



<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 800px; width: 100%; background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(10px);">

        <!-- Modern Gradient Header -->
        <div class="card-header text-center text-white py-4 rounded-top shadow"
             style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
            <h2 class="fw-bold"><i class="fas fa-user-tie me-2"></i> Instructor Profile</h2>
        </div>

        <!-- Profile Image -->
        <div class="text-center mt-4">
            <img class="rounded-circle shadow border mb-3"
                 style="width: 180px; height: 180px; object-fit: cover; border: 5px solid #6a11cb;"
                 src="/images/@Model.ImageUrl" alt="Instructor Image" />
        </div>

        <!-- Instructor Details -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-user"></i> Full Name</label>
                    <input asp-for="fullName" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-calendar"></i> Hiring Date</label>
                    <input asp-for="HiringDate" type="date" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-dollar-sign"></i> Salary</label>
                    <input asp-for="Salary" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-user-clock"></i> Age</label>
                    <input asp-for="Age" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-12 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-building"></i> Department</label>
                    <input asp-for="DeptName" class="form-control text-center fw-semibold" readonly />
                </div>
            </div>

            <!-- Courses Table -->
            <div class="mt-4">
                <h4 class="text-center text-primary mb-3"><i class="fas fa-book-open me-1"></i> Assigned Courses</h4>
                <table class="table table-hover text-center shadow rounded">
                    <thead class="text-white" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
                        <tr>
                            <th class="p-3">Course Name</th>
                        </tr>
                    </thead>
                    <tbody class="bg-light">
                        @foreach (var course in Model.Courses)
                        {
                            <tr class="fw-semibold" style="background-color:@(course.Id % 2 == 0 ? "#e3eaff" : "#cbd5ff");">
                                <td class="p-3">@course.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Back Button -->
            <div class="text-center mt-4">
                <a asp-action=@((Model.Id != 0) ? "Index" : "") asp-controller=@((Model.Id != 0) ? "Instructor" : "Home")
                   class="btn btn-outline-primary px-4 py-2 fw-bold shadow-lg">
                    <i class="fas fa-arrow-left"></i> @(Model.Id != 0 ? "Back To Index" : "Back To Home")
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Table Row Hover Effect */
    .table tbody tr:hover {
        background: rgba(98, 99, 255, 0.2);
        transition: 0.3s ease-in-out;
    }

    /* Button Hover */
    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }
</style>

<!-- Include FontAwesome for Icons -->
