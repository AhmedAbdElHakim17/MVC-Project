@model StudentViewModel 
@{ 
    ViewData["Title"] = "DetailsVM"; 
} 
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 800px; width: 100%; background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(10px);">

        <!-- Modern Gradient Header -->
        <div class="card-header text-center text-white py-4 rounded-top shadow"
             style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
            <h2 class="fw-bold"><i class="fas fa-user-graduate me-2"></i> Student Profile</h2>
        </div>

        <!-- Profile Image -->
        <div class="text-center mt-4">
            <img class="rounded-circle shadow border mb-3"
                 style="width: 180px; height: 180px; object-fit: cover; border: 5px solid #6a11cb;"
                 src="/images/@Model.ImgUrl" alt="Student Image" />
        </div>

        <!-- Student Details -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-user"></i> Full Name</label>
                    <input asp-for="Name" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-user-clock"></i> Age</label>
                    <input asp-for="Age" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-12 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-map-marker-alt"></i> Address</label>
                    <input asp-for="Address" class="form-control text-center fw-semibold" readonly />
                </div>
                <div class="col-md-12 mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-building"></i> Department</label>
                    <input asp-for="DeptName" class="form-control text-center fw-semibold" readonly />
                </div>
            </div>

            <!-- Courses Table -->
            <div class="mt-4">
                <h4 class="text-center text-primary mb-3"><i class="fas fa-book-open me-1"></i> Enrolled Courses</h4>
                <table class="table table-hover text-center shadow rounded">
                    <thead class="text-white" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
                        <tr>
                            <th class="p-3">Course Name</th>
                            <th class="p-3">Degree</th>
                        </tr>
                    </thead>
                    <tbody class="bg-light">
                        @for (int i = 0; i < Model.CourseStds.Count; i++)
                        {
                            <tr class="fw-semibold"
                                style="background-color:@(i % 2 == 0 ? "#e3eaff" : "#cbd5ff");
                                       color:@(Model.CourseStds[i].Degree > 60 ? "green" : "red");">
                                <td style="color:@(Model.CourseStds[i].Degree == 0? "black":null)">@Model.CourseStds[i].Course.Name</td>
                                <td style="color:@(Model.CourseStds[i].Degree == 0? "black":null)">
                                    @(Model.CourseStds[i].Degree != 0 ? Model.CourseStds[i].Degree : "Not Assigned")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Back Button -->
            <div class="text-center mt-4">
                <a asp-action="Index" asp-controller=@((!User.IsInRole("Student")) ? "Student" : "Home")
                   class="btn btn-outline-primary px-4 py-2 fw-bold shadow-lg">
                    <i class="fas fa-arrow-left"></i> @(!User.IsInRole("Student") ? "Back To Index" : "Back To Home")
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Table Row Hover Effect */
    .table tbody tr:hover {
        background: rgba(98, 99, 255, 0.2);
        transition: 0.3s ease-in-out;
    }

    /* Button Hover */
    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }
</style>

<!-- Include FontAwesome for Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
