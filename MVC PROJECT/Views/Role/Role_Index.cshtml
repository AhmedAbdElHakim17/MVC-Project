@model List<RoleViewModel>
@{
    ViewData["Title"] = "Role_Index";
}

<style>
    .custom-table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .custom-table th {
            background: linear-gradient(135deg, #28a745, #218838);
            color: white;
        }

        .custom-table tbody tr:hover {
            background: rgba(40, 167, 69, 0.1);
            transition: 0.3s;
        }

    .btn-action {
        margin: 2px;
    }
</style>
<div class="container mt-4">
    <h2 class="text-center text-success fw-bold mb-4">
        <i class="fas fa-users"></i> Roles
    </h2>
    <table class="table table-bordered table-hover custom-table text-center">
        <thead>
            <tr>
                <th>Name</th>
                @* <th>Edit</th> *@
                @* <th>Delete</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.RoleName</td>
                    @* <partial name="_SharedButtons" model="student.Id" /> *@
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center mt-3">
        <a class="btn btn-success btn-lg shadow fw-bold" asp-action="Add">
            <i class="fas fa-user-plus"></i> New Role
        </a>
    </div>
