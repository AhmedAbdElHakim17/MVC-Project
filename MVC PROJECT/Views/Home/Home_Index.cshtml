@{
    ViewData["Title"] = "Home - Academix";
}

<!-- Hero Section -->
<div class="hero-section text-white d-flex align-items-center justify-content-center text-center"
     style="height:@(!User.Identity.IsAuthenticated?"30vh" : "90vh"); background: linear-gradient(45deg, #007bff, #6610f2);">
    <div>
        <h1 class="display-3 fw-bold">Welcome to Academix @(User.Identity.IsAuthenticated ? ", " + User.Identity.Name : String.Empty)</h1>
        @if (!User.Identity.IsAuthenticated)
        {
            <p class="lead">A Smart & Integrated Educational Management System</p>
        }
        @* <a asp-action="About" class="btn btn-lg btn-light text-primary fw-bold px-5 py-3 shadow-lg">Discover More</a> *@
    </div>
</div>
<!-- Features Section -->
@if (!User.Identity.IsAuthenticated)
{
    <section class="container text-center my-5">
        <h2 class="mb-4">What Does Academix Offer?</h2>
        <div class="row">
            <!-- Admins -->
            <div class="col-md-3">
                <div class="p-4 shadow rounded bg-light">
                    <i class="fas fa-user-cog fa-3x text-danger"></i>
                    <h4 class="mt-3">Admin Dashboard</h4>
                    <p>Manage users, permissions, reports, and the entire system.</p>
                </div>
            </div>
            <!-- HRs -->
            <div class="col-md-3">
                <div class="p-4 shadow rounded bg-light">
                    <i class="fas fa-users fa-3x text-warning"></i>
                    <h4 class="mt-3">HR Management</h4>
                    <p>Handle staff recruitment, payroll, and organizational policies.</p>
                </div>
            </div>
            <!-- Instructors -->
            <div class="col-md-3">
                <div class="p-4 shadow rounded bg-light">
                    <i class="fas fa-chalkboard-teacher fa-3x text-primary"></i>
                    <h4 class="mt-3">Instructor Portal</h4>
                    <p>Schedule classes, upload course materials, and track student progress.</p>
                </div>
            </div>
            <!-- Students -->
            <div class="col-md-3">
                <div class="p-4 shadow rounded bg-light">
                    <i class="fas fa-user-graduate fa-3x text-success"></i>
                    <h4 class="mt-3">Student Dashboard</h4>
                    <p>Access courses, grades, attendance, and academic resources.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Call to Action -->
    <div class="text-center bg-primary text-white py-5">
        <h3 class="fw-bold">Get Started with Academix Today!</h3>
        <p class="lead">The all-in-one solution for educational institutions.</p>
        <a asp-action="Register" asp-controller="Account" class="btn btn-lg btn-light text-primary fw-bold px-5 py-3 shadow-lg">Sign Up Now</a>
    </div>
}

<!-- FontAwesome for Icons -->
<!-- Font Awesome via CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous">

