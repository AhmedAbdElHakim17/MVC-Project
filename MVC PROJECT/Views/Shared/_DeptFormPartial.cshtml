@model DepartmentViewModel
@{
}
<form asp-action=@(Model == null || Model.Id == 0? "Add" : "Edit") asp-route-id="@Model?.Id" class="form form-control">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input class="form form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Location"></label>
        <input class="form form-control" asp-for="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>

    </div>
    <input type="submit" value=@(Model == null||Model.Id == 0? "Create":"Save") class="btn btn-success mt-2" />
    <a asp-action="Index" asp-controller="Department" class="btn btn-warning" style="margin-top:10px">Back To Index</a>
</form>

