@model RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
    // SelectList selectListItems = new SelectList(Model.Roles);
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 600px; width: 100%; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">

        <!-- Gradient Header -->
        <div class="card-header text-center text-white py-4 rounded-top shadow"
             style="background: linear-gradient(135deg, #007bff, #0056b3);">
            <h2 class="fw-bold"><i class="fas fa-user-plus me-2"></i> Register</h2>
        </div>

        <!-- Form -->
        <div class="card-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-user"></i> Username</label>
                    <input asp-for="UserName" class="form-control rounded-pill" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-lock"></i> Password</label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-lock"></i> Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                @* <div class="mb-3"> *@
                @*     <label class="fw-bold text-secondary"><i class="fas fa-map-marker-alt"></i> Address</label> *@
                @*     <input asp-for="Address" class="form-control rounded-pill" placeholder="Enter your address" /> *@
                @*     <span asp-validation-for="Address" class="text-danger"></span> *@
                @* </div> *@

                @* <div class="mb-3"> *@
                @*     <label class="fw-bold text-secondary"><i class="fas fa-user-tag"></i> Role</label> *@
                @*     <select asp-for="Role" asp-items="selectListItems" class="form-control rounded-pill"> *@
                @*         <option value="">Select Role</option> *@
                @*     </select> *@
                @*     <span asp-validation-for="Role" class="text-danger"></span> *@
                @* </div> *@

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 fw-bold shadow rounded-pill">
                        <i class="fas fa-user-check"></i> Create Account
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary px-4 py-2 fw-bold shadow rounded-pill ms-2">
                        <i class="fas fa-arrow-left"></i> Back to Home
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .form-control {
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #004085);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
