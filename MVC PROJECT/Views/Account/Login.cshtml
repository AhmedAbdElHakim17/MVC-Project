@model LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 450px; width: 100%; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">

        <!-- Gradient Header -->
        <div class="card-header text-center text-white py-4 rounded-top shadow"
             style="background: linear-gradient(135deg, #007bff, #0056b3);">
            <h2 class="fw-bold"><i class="fas fa-sign-in-alt me-2"></i> Login</h2>
        </div>

        <!-- Login Form -->
        <div class="card-body">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div> 

                <div class="mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="fw-bold text-secondary"><i class="fas fa-lock"></i> Password</label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="RememberMe" id="rememberMeCheckbox" />
                    <label class="form-check-label fw-semibold text-secondary" for="rememberMeCheckbox">
                        Remember Me
                    </label>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 fw-bold shadow rounded-pill">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                    <a asp-action="Register" class="btn btn-outline-secondary px-4 py-2 fw-bold shadow rounded-pill ms-2">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .form-control {
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #004085);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
